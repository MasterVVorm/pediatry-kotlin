<?xml version="1.0" encoding="utf-8"?>
<navigation
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/menu_btn"
        app:startDestination="@id/menu">


    <fragment
            android:id="@+id/menu"
            android:label="@string/menu_title"
            android:name="com.develop.grizzzly.pediatry.fragments.MenuFragment">
        <action android:id="@+id/action_menu_to_webinars" app:destination="@id/webinars"/>
        <action android:id="@+id/action_menu_to_conferences" app:destination="@id/conferences"/>
    </fragment>

    <fragment
            android:id="@+id/webinars"
            android:label="@string/webinars"
            android:name="com.develop.grizzzly.pediatry.fragments.WebinarsFragment">
    </fragment>


    <fragment
            android:id="@+id/conferences"
            android:label="@string/conferentions"
            android:name="com.develop.grizzzly.pediatry.fragments.ConferentionsFragment">
        <action android:id="@+id/action_conference_to_stage" app:destination="@id/conference_stage"/>
    </fragment>

    <fragment
            android:id="@+id/conference_stage"
            android:label="Конференция"
            android:name="com.develop.grizzzly.pediatry.fragments.ConferenceStageFragment">

    </fragment>


</navigation>